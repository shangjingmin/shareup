= form_for @metadoc do |f|
  -if @metadoc.errors.any?
    #error_explanation
      %h2= "#{pluralize(@metadoc.errors.count, "error")} prohibited this metadoc from being saved:"
      %ul
        - @metadoc.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
    = f.label :tags
    = f.text_field :tags, :size=>20
  .field
    = f.label :content
    %br/
    = f.text_area :content, :rows=>12, :cols=>50
  .field
    = f.label :from_url
    = f.text_field :from_url
    = f.label 'Mark', :for=>'from_mark'
    = f.text_field :from_mark, :size=>20
  .field
    = f.label :comment
    = f.text_field :comment
    = f.check_box :public
    = f.label :public
  .actions
    = f.submit 'Save'
